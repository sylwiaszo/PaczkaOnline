@page "/Czekam/{KodPaczki?}"
@model PaczkaOnline.Web.Pages.CzekamModel
@{
    ViewData["Title"] = "Czekam";
}

<div class="row my-4">
    <div class="col">
        <div class="jumbotron bg-dark">

            @if (RouteData.Values["KodPaczki"] == null)
            {
                <h3 class="text-white display-4">Wprowadź kod paczki:</h3>
                <form method="post">
                    <div class="form-group">
                        <label for="KodPaczki2" class="text-white">Kod paczki:</label>
                        <input type="text" class="form-control" id="KodPaczki2" name="KodPaczki2" aria-describedby="KodPaczki2Pomoc" placeholder="Twój kod paczki">
                        <small id="KodPaczki2Pomoc" class="form-text text-light">Kod, który otrzymałeś od osoby, która wysyła do Ciebie przedmiot.</small>
                    </div>
                    
                    <button class="btn btn-success" type="submit">Sprawdź</button>
                </form>
            }
            else
            {
                <p>Znaleziona paczka - @RouteData.Values["KodPaczki"]</p>
                <p>@Model.Dane</p>
                <p>@Model.KodPaczki2</p>
            }
        </div>
    </div>
</div>

